lab task 1:
def draw_square():
    # Get the side length from the user
    side_length = int(input("Enter the side length of the square: "))
    
    # Loop to print the square row by row
    for i in range(side_length):
        print('*' * side_length)

# Call the function to draw the square
draw_square()


lab task 2:
def sum_even_numbers(numbers):
    # Filter even numbers from the list and sum them
    even_sum = sum(num for num in numbers if num % 2 == 0)
    return even_sum

# Example usage
numbers = [1, 2, 3, 4, 5, 6]
result = sum_even_numbers(numbers)
print(f"The sum of even numbers is: {result}")

lab task 3:
def countdown_to_zero(number):
    # Loop from the number down to 0
    while number >= 0:
        print(number)
        number -= 1

# Example usage
number = int(input("Enter a number to countdown from: "))
countdown_to_zero(number)
